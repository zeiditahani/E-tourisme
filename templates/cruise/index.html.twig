{% extends 'base.html.twig' %}

{% block body %}
  
    {% for d in data %}
        {{ d.title }}
        {{ d.description }}
        {#{ d.detaileddescription }#}
        {{ d.included }}
        {{ d.unincluded }}
        {{ d.image }}
