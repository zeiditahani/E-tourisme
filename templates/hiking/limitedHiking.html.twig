{% block body %}

    <!-- Start Blog Style -->
    <div class="rbt-rbt-blog-area rbt-section-gap bg-color-white">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-center">
                        <span class="subtitle bg-secondary-opacity">E_tourisme Tunisie</span>
                        <h2 class="title">Tunisie : Les meilleurs itinéraires de randonnée</h2>
                        <p class="description has-medium-font-size mt--20">Découvrez des cartes de sentiers sélectionnées avec soin, ainsi que des avis et des photos de passionné(e)s de la nature comme vous.
                        </p>
                    </div>
                </div>
            </div>
            <!-- Start Card Area -->
            <div class="row g-5 mt--30">

                <!-- Start Single Card  -->
                {% for d in data %}
                <div class="col-lg-4 col-md-6 col-sm-12 col-12 mt--30">
                    <div class="rbt-card variation-02 rbt-hover">
                        <div class="rbt-card-img">
                            <a href="course-details.html">
                              {#  <img src="{{ asset('uploads/' ~ d.image)}}" alt="{{ d.title }}"> </a> #}
                                  <img src="{{ asset('uploads/HikingImages/'~d.image)}}" alt="{{ d.title }}"  width="270" height="160" > </a>
                                {#<img src="{{ asset('images/logo.png') }}" alt="Symfony!"/> //Par défaut, cela affichera un chemin vers votre image tel que /images/logo.png.#}
                                {#<td><img src="{{asset('uploads/images/'~ app.user.image)}}" height="50"></td>#}
                        </div>
                        <div class="rbt-card-body">
                            <h5 class="rbt-card-title"><a href="course-details.html"></a>{{ d.title }}</h5>
                            <div class="rbt-card-bottom">
                                {%for region in d.regions%}
                                <a class="transparent-button" href="#">{{region}}</a>
                                {%endfor%}
                            </div>
                            <p class="rbt-card-text">{{ d.description }}</p>
                            <div class="rbt-card-bottom">
                                <a class="transparent-button" href="{{path('app_detailHiking',{'id':d.id})}}"><button onclick="detailHiking()">Voir itinéraire</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
                <!-- End Single Card  -->
            </div>
            <!-- End Card Area -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="load-more-btn mt--60 text-center">
                        <a class="rbt-btn rbt-marquee-btn" href="{{path('app_hiking')}}">
                            <span data-text="Découvrez les plus beaux parcours de randonnées en Tunisie">
                               Découvrez les plus beaux parcours de randonnées en Tunisie
                            </span>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- End Blog Style -->
{% endblock %}
